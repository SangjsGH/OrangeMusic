<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="21dp"
            android:src="@mipmap/hmbb"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="21dp" />


        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/user_img"
            android:layout_marginStart="130dp"
            android:text="Quella"
            android:textColor="@color/yello"
            android:textSize="28sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="130dp" />

        <TextView
            android:id="@+id/user_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/user_name"
            android:layout_below="@+id/user_qiandaowenben"
            android:text="关注"
            android:textSize="19sp"
            android:layout_alignLeft="@+id/user_name" />

        <TextView
            android:id="@+id/user_guanzhushu"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/user_img"
            android:layout_marginStart="145dp"
            android:text="0"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="145dp" />

        <TextView
            android:id="@+id/user_fensi"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/user_vip"
            android:layout_below="@+id/user_qiandaowenben"
            android:text="粉丝"
            android:textSize="19sp"
            android:layout_alignRight="@+id/user_vip" />

        <TextView
            android:id="@+id/user_fensishu"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/user_guanzhushu"
            android:layout_toEndOf="@+id/user_name"
            android:text="5"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/user_name" />

        <TextView
            android:id="@+id/user_dongtai"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/user_qiandaowenben"
            android:layout_marginEnd="86dp"
            android:text="动态"
            android:textSize="19sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="86dp" />

        <TextView
            android:id="@+id/user_dongtaishu"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/user_guanzhushu"
            android:layout_marginEnd="95dp"
            android:text="6"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="95dp" />

        <ImageView
            android:id="@+id/user_vip"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/user_img"
            android:layout_marginEnd="152dp"
            android:src="@mipmap/vip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="152dp" />

        <ImageView
            android:id="@+id/user_qiandao"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/user_img"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/qiandao"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/user_qiandaowenben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/user_qiandao"
            android:layout_below="@+id/user_qiandao"
            android:text=" 签到"
            android:textSize="14sp"
            android:layout_alignLeft="@+id/user_qiandao" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/my_localmusic"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_below="@+id/user"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/user_yingyue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:src="@mipmap/music"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp" />

        <TextView
            android:id="@+id/user_xiaoxiwenben"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="115dp"
            android:text="本地音乐"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="115dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/user_haoyou"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/haoyou" />

        <TextView
            android:id="@+id/user_haoyouwenben"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="115dp"
            android:text="我的好友"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="115dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="259dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/user_huanfu"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:src="@mipmap/huanfu"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp" />

        <TextView
            android:id="@+id/user_huanfuwenben"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="115dp"
            android:text="个性换肤"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="115dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_calendir"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="202dp"
        android:layout_alignParentLeft="true">


        <ImageView
            android:id="@+id/user_rili"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:src="@mipmap/rili"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp" />

        <TextView
            android:id="@+id/user_riliwenben"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="115dp"
            android:text="日历"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="115dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/user_likewenben2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/user_like"
            android:layout_marginTop="15dp"
            android:text="创建的歌单"
            android:textColor="@color/yello"
            android:textSize="20sp"
            android:layout_alignLeft="@+id/user_like" />

        <ImageView
            android:id="@+id/user_jia"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/user_likewenben2"
            android:layout_toStartOf="@+id/user_sl"
            android:src="@mipmap/jia"
            android:layout_toLeftOf="@+id/user_sl" />

        <ImageView
            android:id="@+id/user_sl"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/user_likewenben2"
            android:layout_marginEnd="13dp"
            android:src="@mipmap/sl"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp" />
        <ImageView
            android:id="@+id/user_like"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="35dp"
            android:src="@mipmap/like"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp" />

        <TextView
            android:id="@+id/user_likewenben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="109dp"
            android:text="我喜欢的音乐"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="109dp" />

        <TextView
            android:id="@+id/user_likewenben1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/user_likewenben"
            android:layout_marginBottom="40dp"
            android:text="50首"
            android:textSize="15sp"
            android:layout_alignLeft="@+id/user_likewenben" />


    </RelativeLayout>




</RelativeLayout>