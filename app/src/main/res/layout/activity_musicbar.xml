<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager1"
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/base_img"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_base"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:text="歌单广场"
                    android:textColor="@color/dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/fm_img"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_fm"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="私人FM"
                    android:textColor="@color/dark"
                    android:layout_width="60dp"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/new_img"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_new"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="潮流歌手"
                    android:textColor="@color/dark"
                    android:layout_width="60dp"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/rank_img"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_tuijian"/>
                <TextView
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="8dp"
                    android:text="排行榜"
                    android:textColor="@color/dark"
                    android:layout_width="60dp"
                    android:layout_height="40dp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:background="#9f9e9e" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="推荐歌单"
                android:textSize="15dp"
                android:textColor="@color/dark"
                android:textStyle="bold"
                android:layout_width="70dp"
                android:layout_height="20dp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/songlist_viewpager"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_marginTop="10dp">

            </android.support.v4.view.ViewPager>

            


        </LinearLayout>

    </LinearLayout>

</ScrollView>
</LinearLayout>